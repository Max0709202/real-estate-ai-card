# Backend API Security

# Deny direct access to config files
<FilesMatch "\.(php|sql|json)$">
    <If "%{REQUEST_URI} =~ m#/config/#">
        Require all denied
    </If>
</FilesMatch>

# CORS: Allow-Methods and Allow-Headers only here.
# Access-Control-Allow-Origin is set in PHP for credential requests (no wildcard).
Header set Access-Control-Allow-Methods "GET, POST, PUT, DELETE, OPTIONS"
Header set Access-Control-Allow-Headers "Content-Type, Authorization, X-Requested-With"

